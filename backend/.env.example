# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# MongoDB (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/clinic_db?retryWrites=true&w=majority

# Redis (Optional - for caching and job queue)
# If not available, application will run without caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# 2FA
TWO_FA_ENABLED=false
TWO_FA_ISSUER=ClinicManagement

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
LOGIN_RATE_LIMIT_MAX=5

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_ENABLED=false
TELEGRAM_WEBHOOK_URL=

# SMS Gateway
SMS_PROVIDER=eskiz
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://notify.eskiz.uz/api
SMS_FROM=ClinicName
SMS_ENABLED=false

# Billing Rules
DEBT_LIMIT_DEFAULT=500000
INPATIENT_12H_BILLING=true
LATE_PENALTY_PER_MINUTE=5000

# Audit
AUDIT_RETENTION_DAYS=365

# CORS (Production uchun frontend URL'ingizni qo'shing)
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# AI Chatbot (Optional - Groq API)
GROQ_API_KEY=your-groq-api-key-here
